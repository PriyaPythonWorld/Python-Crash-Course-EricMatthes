# CHAT GPT
# Step 1: Create a list of places to visit
places = ["Tokyo", "Paris", "New York", "Sydney", "Rome"]

# Step 2: Print the list in its original order
print("Original list:", places)

# Step 3: Print the list in alphabetical order without changing the original list
print("Alphabetical order:", sorted(places))

# Step 4: Show that the list is still in its original order
print("Still original:", places)

# Step 5: Print the list in reverse alphabetical order without changing the original list
print("Reverse alphabetical order:", sorted(places, reverse=True))

# Step 6: Show that the list is still in its original order
print("Still original:", places)

# Step 7: Use reverse() to change the order of the list
places.reverse()
print("Reversed list:", places)

# Step 8: Use reverse() again to revert to the original order
places.reverse()
print("Back to original:", places)

# Step 9: Use sort() to sort the list alphabetically
places.sort()
print("Sorted in alphabetical order:", places)

# Step 10: Use sort() to sort the list in reverse alphabetical order
places.sort(reverse=True)
print("Sorted in reverse alphabetical order:", places)

# List of people you are inviting to dinner
guests = ["Alice", "Bob", "Charlie"]

# Use len() to print the number of guests
print(f"You are inviting {len(guests)} people to dinner.")

# Step 1: Create a list of programming languages
languages = ["Python", "JavaScript", "C++", "Ruby", "Java"]

# Use append() to add an item to the end of the list
languages.append("Swift")
print("After append:", languages)

# Use insert() to add an item at a specific position
languages.insert(2, "Go")
print("After insert:", languages)

# Use pop() to remove the last item in the list
languages.pop()
print("After pop:", languages)

# Use remove() to remove a specific item from the list
languages.remove("Go")
print("After remove:", languages)

# Use sort() to sort the list alphabetically
languages.sort()
print("After sort:", languages)

# Use reverse() to reverse the order of the list
languages.reverse()
print("After reverse:", languages)

# Use len() to find the length of the list
print("Length of the list:", len(languages))

# Accessing a specific item using indexing
print("First language:", languages[0])

# Modifying an item using indexing
languages[0] = "Kotlin"
print("Modified list:", languages)

